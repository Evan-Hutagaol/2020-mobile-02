<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/red_rectangle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/red_rectangle"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/logo_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100sp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcome_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24sp"
        android:layout_marginLeft="24sp"
        android:layout_marginTop="18sp"
        android:fontFamily="@font/futura_pt_semibold"
        android:text="Welcome back"
        android:textColor="#313131"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/red_rectangle" />

    <TextView
        android:id="@+id/sub_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24sp"
        android:fontFamily="@font/futura_pt_semibold"
        android:text="at largest Services marketplace"
        android:textColor="#313131"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome_back" />

    <TextView
        android:id="@+id/role_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24sp"
        android:layout_marginTop="48sp"
        android:fontFamily="@font/futura_pt_semibold"
        android:text="Enter as a"
        android:textColor="#9b9b9b"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sub_welcome" />

    <Button
        android:id="@+id/btn_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User"
        android:background="@drawable/btn_red_medium"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/role_enter"
        android:layout_marginTop="16sp"
        android:layout_marginLeft="18sp"
        android:layout_marginRight="18sp"
        />
    
    <Button
        android:id="@+id/btn_service_provider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="service provider"
        android:fontFamily="@font/futura_pt_semibold"
        app:layout_constraintTop_toBottomOf="@id/btn_user"
        android:layout_marginRight="18sp"
        android:layout_marginLeft="18sp"
        android:layout_marginTop="16sp"
        android:background="@drawable/btn_white_large"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter as a guest"
        android:textColor="#9b9b9b"
        android:fontFamily="@font/futura_pt_semibold"
        app:layout_constraintTop_toBottomOf="@id/btn_service_provider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>